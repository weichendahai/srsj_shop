<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.srsj.dao.SysRoleDao">

	<resultMap id="BaseResultMap" type="com.srsj.model.SysRole">
		<id property="id" column="id" jdbcType="BIGINT"/>
		<result property="name" column="name" jdbcType="VARCHAR"/>
		<result property="sort" column="sort" jdbcType="SMALLINT"/>
		<result property="description" column="description" jdbcType="VARCHAR"/>
	</resultMap>

	    <!-- 查询条件 -->
    <sql id="Base_Where_Clause">
    	where 1=1
    	<trim  suffixOverrides="," >
			<if test="id != null and id != ''">
			and id = #{id, jdbcType=BIGINT }
		  </if>
			<if test="name != null and name != ''">
			and name = #{name, jdbcType=VARCHAR }
		  </if>
			<if test="sort != null and sort != ''">
			and sort = #{sort, jdbcType=SMALLINT }
		  </if>
			<if test="description != null and description != ''">
			and description = #{description, jdbcType=VARCHAR }
		  </if>
		</trim>
    </sql>

	<insert id="insert" useGeneratedKeys="true" keyProperty="id"
		parameterType="com.srsj.model.SysRole">
		insert into sys_role
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="id != null">
				id,
			</if>
			<if test="name != null">
				name,
			</if>
			<if test="sort != null">
				sort,
			</if>
			<if test="description != null">
				description,
			</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test="id != null">
				#{id, jdbcType=BIGINT},
			</if>
			<if test="name != null">
				#{name, jdbcType=VARCHAR},
			</if>
			<if test="sort != null">
				#{sort, jdbcType=SMALLINT},
			</if>
			<if test="description != null">
				#{description, jdbcType=VARCHAR},
			</if>
		</trim>
	</insert>

	<delete id="delete" parameterType="int">
		delete from sys_role
		where
		id = #{id}
	</delete>

	<update id="update" parameterType="com.srsj.model.SysRole">
		update sys_role
		<set>
			<if test="name != null">
			  name = #{name, jdbcType=VARCHAR },
			</if>
			<if test="sort != null">
			  sort = #{sort, jdbcType=SMALLINT },
			</if>
			<if test="description != null">
			  description = #{description, jdbcType=VARCHAR },
			</if>
		</set>
		where
		id = #{id}
	</update>

	<!-- 用于select查询公用抽取的列 -->
	<sql id="Base_Column_List">
		id,name,sort,description
	</sql>

	<select id="queryById" parameterType="int" resultMap="BaseResultMap">
		select
		<include refid="Base_Column_List" />
		from sys_role
		where
		id = #{id}
	</select>

    <select id="queryOne" resultMap="BaseResultMap"  parameterType="Object">
        select <include refid="Base_Column_List"/>
        from sys_role
        <include refid="Base_Where_Clause"/>
        limit 1
    </select>

	<select id="queryByCount" resultType="int">
		select count(*)
		from sys_role
		<include refid="Base_Where_Clause"/>
	</select>

    <select id="queryByList" resultMap="BaseResultMap"  parameterType="Object">
        select
        <include refid="Base_Column_List"/>
        from sys_role
        <include refid="Base_Where_Clause"/>

        <if test="sortCondition != null">
            ${sortCondition}
        </if>
        ${limitCondition}
    </select>

	<select id="queryAll" resultMap="BaseResultMap">
		select
			<include refid="Base_Column_List" />
		from sys_role
        <include refid="Base_Where_Clause"/>
	</select>

</mapper>